{
    "manifest_version": 3,
    "name": "Clipboard Monitor",
    "version": "1.0",
    "description": "Monitors the clipboard for changes.",
    "permissions": [
      "clipboardRead"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Clipboard Monitor"
    }
  }
  